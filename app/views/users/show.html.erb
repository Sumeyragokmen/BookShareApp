<h1><%= @user.username %></h1>
<h5><%= @user.email%></h5>

<table class="table">
  <tr>
    <th>Title</th>
    <th>Author</th>
    <th>Show</th>
  </tr>
 
  <% @user.books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.author %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
    </tr>
  <% end %>
</table>